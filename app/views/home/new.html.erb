<main class="container index">
  <div class="home content">
    <div class="header">
      <h1> New Postcard Page</h1>
    </div>
    <div class ="container main">
    </div>

    <div class="form">
      <%= form_for @postcard, url: {action: "create"}, html: {class: "nifty_form"} do |form| %>
        <div class="form-group">
          <%= form.text_field :title, placeholder: "Postcard title", id: "title" %>
          <label for="Title">Title</label>
        </div>
        <div class="form-group">
          <%= form.text_field :body, placeholder: "What do you want to say? "%>
          <label for="Title">Main text</label>
        </div>
        <div class="form-group">
          <%= form.text_field :from, placeholder: "Who is it from?" %>
          <label for="Title">Where from?</label>
        </div>
          <%= form.submit "Create" %>
        <% end %>
    </div>
  </div>
</main>